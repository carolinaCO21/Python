def ejercicio1():
    print("Ejercicio 1")
    print("Lista de 10 números enteros aleatorios entre 1 y 100:")
    print(f"Resultado: {",".join(str(num) for num in listaEnterosAleatorios(1,100))}")

# usado por 2 , 3 y 4

def numsSeparadosPorComa(numerosAIntroducir:int , enunciado:str , funcion):
    print("Ejercicio 3")
    print(enunciado)
    numerosS = input(f"Introduce una lista de {numerosAIntroducir} números separados por comas: ")
    if len(numerosS.split(",")) != numerosAIntroducir:
        print(f"Por favor, introduce exactamente {numerosAIntroducir} números.")
        return None
    try:
        lista_numeros = [int(num.strip()) for num in numerosS.split(",")]
    except ValueError:
        print("Todos los valores deben ser números enteros.")
        return None

    # Aplica la función y devuelve el resultado
    return funcion(lista_numeros)

