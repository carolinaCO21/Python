def get_user_choice(opcion: int):
    match opcion:
        case 1:
            return ejercicio1
        case 2:
            return numsSeparadosPorComa(10,"Mostraremos el máximo y minimo de una lista de números", mostrarMaxMin)
        case 3:
            return numsSeparadosPorComa(8,"Mostraremos si los números de una lista son pares o impares", esPar)
        case 4:
            return ejercicio4
        case 5:
            return ejercicio5
        case 6:
            return ejercicio6
        case 7:
            return ejercicio7
        case 8: 
            return ejercicio8
        case 9: 
            return ejercicio9
        case 10:
            return ejercicio10
        case _:
            print("Opción no válida")

def main():
    while True:
        print("""
        
        =============================
                MENÚ PRINCIPAL  L
        =============================
        1. 10 números enteros aleatorios entre 1 y 100
        2. Ordenar dos números
        3. Sumar números hasta 0
        4. Adivina el número
        5. Aprender a contar
        6. Factorial
        7. Es número primo?
        8. Imprimir triángulo
        9. Números comprendidos entre A y B
        10. Máximo entre dos números
        11. Es vocal?
        12. Calculadora Profesional
        0. Salir
        =============================

        """)

        print("\nSeleccione el ejercicio a ejecutar (1-12) o 0 para salir:")
        try:
            opcion = int(input("Opción: "))
        except ValueError:
            print("\nPor favor, introduce un número válido.")
            continue
    
        if opcion == 0:
            print("Saliendo...")
            break
        
        funcion = get_user_choice(opcion)
        if funcion:
            funcion() # llamo a la función
        else:
            print("Opción no válida, intenta de nuevo.")


if __name__ == "__main__":
    main()
