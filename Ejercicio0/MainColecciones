#4
def ejercicio4():
    resultado = numsSeparadosPorComa(10, "Ordenaremos de mayor a menor", ordenarNumeros)
    if resultado is not None:
        print("Números ordenados de mayor a menor:")
        print(", ".join(str(num) for num in resultado))

def ejercicio5():
    print("Lista de 10 números enteros aleatorios entre 1 y 10:")
    listaNumeros = listaEnterosAleatorios(1,10)
    print("Cuántas veces aparece N?")
    inputN = input("Introduce un número entre 1 y 10: ")
    if not inputN.isdigit() or not (1 <= int(inputN) <= 10):
        print("Por favor, introduce un número válido entre 1 y 10.")
        return
   

def ejercicio6():
    print("Contador de palabras en una frase")
    texto = input("Introduce una frase: ")
    frecuencia_palabras = contarPalabras(texto)
    print("Frecuencia de palabras:")
    # clave  es palabrea, valor es frecuencia
    for clave, valor in frecuencia_palabras.items():
        print(f"{clave}: {valor}")
        print("====================")

